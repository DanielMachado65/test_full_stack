<p id="notice"><%= notice %></p>

<h1>Compradors</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Telefone</th>
      <th>Admin</th>
      <th> Email </th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @compradors.each do |comprador| %>
      <tr>
        <td><%= comprador.nome %></td>
        <td><%= comprador.telefone %></td>
        <td><%= comprador.admin %></td>
        <td><%= comprador.email %></td>
        <td><%= link_to 'Show', comprador %></td>
        <td><%= link_to 'Edit', edit_comprador_path(comprador) %></td>
        <td><%= link_to 'Destroy', comprador, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to('Logout', destroy_comprador_session_path,  :method=>'delete') %>
