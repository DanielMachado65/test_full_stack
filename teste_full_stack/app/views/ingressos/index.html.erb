<% if notice %>
  <div class="alert alert-warning mt-3" role="alert">
    <%= notice %>
  </div>
<% end%>

<h1>Ingressos</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col" class="title_header">Preco</th>
      <th scope="col" class="title_header">Nome</th>
      <th scope="col" class="title_header">Taxa</th>
      <th scope="col" class="title_header">Data</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingressos.each do |ingresso| %>
      <tr>
        <td><%= ingresso.preco %></td>
        <td><%= ingresso.nome %></td>
        <td><%= ingresso.taxa %></td>
        <td><%= ingresso.data.strftime('%d/%m/%Y') %></td>
        <td><%= link_to 'Mostrar', ingresso, :class => "btn btn-sm btn-outline-danger title_btn" %></td>
        <td><%= link_to 'Editar', edit_ingresso_path(ingresso), :class => "btn btn-sm btn-outline-danger title_btn" %></td>
        <td><%= link_to 'Eliminar', ingresso, :class => "btn btn-sm btn-outline-danger title_btn", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Ingresso', new_ingresso_path , :class => "btn btn-outline-danger title_btn"%>
